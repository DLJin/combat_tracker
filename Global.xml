<!-- Xml UI. See documentation: https://api.tabletopsimulator.com/ui/introUI/ -->
<VerticalLayout height="100" rectAlignment="MiddleLeft" outline="#FFFFFFFF">
  <Text id="player_name" alignment="MiddleLeft" color="#FFFFFFFF">
    Name
  </Text>

  <Text id="player_hp" alignment="MiddleLeft" color="#FFFFFFFF">
    HP / HP
  </Text>

  <Text id="player_fp" alignment="MiddleLeft" color="#FFFFFFFF">
    FP / FP
  </Text>

  <Text id="last_updated" alignment="MiddleLeft" color="#CCCCCCDD" fontStyle="italic" fontSize="10">
    Last Updated:
  </Text>

  <Toggle id="toggle_calls" alignment="MiddleLeft" onValueChanged="toggleUpdates()" isOn="false" textColor="#FFFFFFFF">
    Read from sheet
  </Toggle>
</VerticalLayout>